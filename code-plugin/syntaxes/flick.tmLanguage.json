{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Flick",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#booleans"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#types"
		},
		{
			"include": "#http-methods"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.flick",
					"match": "#.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.flick",
					"match": "\\b(assume|maybe|otherwise|each|march|select|when|suppose|give|route|with|do|for|task|end)\\b"
				},
				{
					"name": "keyword.declaration.flick",
					"match": "\\b(group|blueprint|free|lock|declare|use|import|in|from|to|as)\\b"
				},
				{
					"name": "keyword.other.flick",
					"match": "\\b(print|ask|and|respond|attempt|oopsie)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.flick",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.flick",
							"match": "\\\\(n|t|r|\\\\|\"|')"
						}
					]
				},
				{
					"name": "string.quoted.single.flick",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.flick",
							"match": "\\\\(n|t|r|\\\\|\"|')"
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.flick",
					"match": "\\b[0-9]+\\.?[0-9]*\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.flick",
					"match": "\\b(yes|no)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.flick",
					"match": ":=|="
				},
				{
					"name": "keyword.operator.comparison.flick",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.arithmetic.flick",
					"match": "\\+|-|\\*|/"
				},
				{
					"name": "keyword.operator.arrow.flick",
					"match": "=>"
				},
				{
					"name": "keyword.operator.access.flick",
					"match": "\\."
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.flick",
					"match": "\\b(task)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.declaration.flick"
						},
						"2": {
							"name": "entity.name.function.flick"
						}
					}
				},
				{
					"name": "support.function.builtin.flick",
					"match": "\\b(num|str|JSON)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.flick",
					"match": "\\b(num|literal)\\b"
				},
				{
					"name": "entity.name.type.flick",
					"match": "\\b(group|blueprint)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.declaration.flick"
						},
						"2": {
							"name": "entity.name.type.flick"
						}
					}
				}
			]
		},
		"http-methods": {
			"patterns": [
				{
					"name": "support.constant.http-method.flick",
					"match": "\\b(GET|POST|PUT|DELETE|PATCH)\\b"
				}
			]
		}
	},
	"scopeName": "source.flick"
}